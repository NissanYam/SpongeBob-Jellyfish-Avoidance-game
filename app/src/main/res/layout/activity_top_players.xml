<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:keepScreenOn="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/game_IMG_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/img_sky"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/top_players_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <FrameLayout
            android:id="@+id/top_players_LAY_frameTop10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp" />

        <FrameLayout
            android:id="@+id/top_players_LAY_frameMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:padding="32dp"
            android:layout_marginBottom="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/top_players_BTN_main_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Back to the main menu"
            android:layout_weight="0.3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:backgroundTint="#BE65C1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/top_players_BTN_chos_char"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Back to choosing another character"
            android:layout_weight="0.3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:backgroundTint="#BE65C1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>