<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/game_IMG_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/img_sky"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/game_lbl_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="score : "
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginStart="20dp"
                    android:visibility="invisible"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/game_img_heart1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/heart"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/game_img_heart2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/heart"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/game_img_heart3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/heart"
                    android:layout_weight="1"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/game_LL1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/game_LL2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/game_LL3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/game_LL4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_jeli12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/jellyfish"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/_LL_actor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_bob1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_spongebob"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_bob2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_spongebob"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_img_bob3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_spongebob"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_btn_left"
                android:layout_width="0dp"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_height="match_parent"
                app:icon="@drawable/left_arrow"
                android:layout_weight="1"
                app:iconSize="80dp"
                app:iconTint="#BE65C1"
                app:iconGravity="textStart" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_btn_right"
                android:layout_width="0dp"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_height="match_parent"
                app:icon="@drawable/right_arrow"
                android:layout_weight="1"
                app:iconSize="80dp"
                app:iconTint="#BE65C1"
                app:iconGravity="textStart"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/game_btn_tryAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to try again"
            app:cornerRadius="30dp"
            android:backgroundTint="#3F51B5"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/game_btn_selectPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to select new player"
            app:cornerRadius="30dp"
            android:backgroundTint="#3F51B5"
            android:visibility="gone"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>