<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/game_IMG_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/img_sky"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/select_LL_actors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="80dp"
        android:layout_marginVertical="150dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Select a player!"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="20dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/select_img_spongebob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_spongebob" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/select_img_petrick"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_petrick" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/select_img_sandy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_sandy" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>